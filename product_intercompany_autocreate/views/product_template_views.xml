<openerp>
    <data>
       <!-- Inherit Form View to Modify it -->
       <record id="product_template_form_view_inherit_button" model="ir.ui.view">
           <field name="name">product.template.form.view.inherit.button</field>
           <field name="model">product.template</field>
           <field name="inherit_id" ref="product.product_template_form_view"/>
           <field name="arch" type="xml">

               <xpath expr="//field[@name='seller_ids']" position="before">
                   <!-- Add your fields or attributes here -->
                   <div>
                       <field name="show_button" invisible="1"/>
                       <button name="action_create_product_inter_company" type="object"
                               string="Generate Product" colspan="1" groups="base.group_sale_manager, base.group_no_one"
                               attrs="{'invisible': ['|',('template_inter_company_created','=',True),('show_button','=',False)]}"/>
                   </div>
               </xpath>

               <div name="options" position="inside">
                    <div attrs="{'invisible': [('show_button','=',False)]}">
                        <field name="template_inter_company_created" readonly="1" />
                        <label for="template_inter_company_created"/>
                    </div>
                </div>

           </field>
       </record>
    </data>
</openerp>