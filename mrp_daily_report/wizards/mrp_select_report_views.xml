<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="mrp_select_report_view_form_wizard" model="ir.ui.view">
            <field name="name">mrp.select.report.view.form.wizard</field>
            <field name="model">mrp_production.select_report</field>
            <field name="arch" type="xml">
                <form string="Select Report">
                    <group>
                        <field name="report_type"/>
                    </group>
                    <footer>
                        <button name="action_confirm" type="object" string="Confirm" class="btn-success" colspan="1"/>
                        <button string="Cancel" class="btn-default" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_mrp_select_report" model="ir.actions.act_window">
            <field name="name">Select MRP Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">mrp_production.select_report</field>
            <field name="view_mode">form</field>
            <field name="view_type">form</field>
            <field name="target">new</field>
        </record>
        <!-- This Menu Item Must have a parent -->
        <menuitem id="menu_action_mrp_daily_report" action="action_mrp_select_report"
                  name="Daily Report" parent="mrp.mrp_planning_menu_root" sequence="1"/>
    </data>
</odoo>