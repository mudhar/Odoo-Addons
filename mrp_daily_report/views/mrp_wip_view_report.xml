<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="mrp_wip_view_pivot">
            <field name="name">mrp.wip.view.pivot</field>
            <field name="model">mrp_wip.view_report</field>
            <field name="arch" type="xml">
                <pivot string="WIP Analysis" disable_linking="True">
                    <field name="production_id" type="row"/>
                    <field name="product_id" type="row"/>
                    <field name="qty_used" type="measure"/>
                    <field name="qty_reject" type="measure"/>
                    <field name="qty_differ" type="measure"/>
                    <field name="qty_return" type="measure"/>

                </pivot>
            </field>
        </record>
        <record id="action_mrp_wip_view_report" model="ir.actions.act_window">
            <field name="name">Work In Process Analysis</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">mrp_wip.view_report</field>
            <field name="view_mode">pivot</field>
        </record>
    </data>
</odoo>