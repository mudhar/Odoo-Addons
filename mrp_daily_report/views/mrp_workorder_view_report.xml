<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="mrp_workorder_view_pivot">
            <field name="name">mrp.workorder.view.pivot</field>
            <field name="model">mrp_workorder.view_report</field>
            <field name="arch" type="xml">
                <pivot string="Work Order" disable_linking="True">
                    <field name="date_order" type="row"/>
                    <field name="production_id" type="row"/>
                    <field name="workorder_id" type="row"/>
                    <field name="product_id" type="row"/>

                    <field name="qty_to_produce" type="measure"/>
                    <field name="qty_good" type="measure"/>
                    <field name="qty_reject" type="measure"/>
                    <field name="qty_sample" type="measure"/>
                </pivot>
            </field>
        </record>

        <record id="action_mrp_workorder_view_report" model="ir.actions.act_window">
            <field name="name">Work Order Analysis</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">mrp_workorder.view_report</field>
            <field name="view_mode">pivot</field>
        </record>
    </data>
</odoo>