<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="product_template_form_view_inherit_multi_sequence" model="ir.ui.view">
            <field name="name">product.template.form.view.inherit.multi.sequence</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='options']//div" position="after">
                    <!-- Add your fields or attributes here -->
                    <div attrs="{'invisible': [('is_materials','=',True)]}">
                        <field name="is_goods" />
                        <label for="is_goods"/>
                    </div>
                    <div attrs="{'invisible': [('is_goods','=',True)]}">
                        <field name="is_materials" />
                        <label for="is_materials"/>
                    </div>
                </xpath>
            </field>
        </record>
        <record id="product_template_search_view_inherited_assembly" model="ir.ui.view">
            <field name="name">product.template.search.view.inherited.assembly</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_search_view"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='consumable']" position="after">
                    <!-- Add new fields here -->
                    <filter string="Product Goods" name="is_goods" domain="[('is_goods', '=', True)]"/>
                    <filter string="Product Materials" name="is_materials" domain="[('is_materials', '=', True)]"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>