<openerp>
    <data>
        <record id="mrp_production_wizard_cancel_view_form" model="ir.ui.view">
            <field name="name">mrp.production.wizard.cancel.view.form</field>
            <field name="model">mrp_production.wizard</field>
            <field name="arch" type="xml">
                <form string="Cancel All Production">
                    <p class="oe_grey">
                        Cancel Semua MO
                    </p>
                    <footer>
                        <button string="Confirm" name="action_cancel_production" type="object" default_focus="1" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <act_window id="action_cancel_all_production"
                    multi="True"
                    key2="client_action_multi" name="Mass Cancel Production"
                    res_model="mrp_production.wizard" src_model="mrp.production"
                    view_mode="form" target="new" view_type="form" />

    </data>
</openerp>