<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="view_picking_form_inherit_internal_transfer" model="ir.ui.view">
            <field name="name">view.picking.form.inherit.internal.transfer</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='location_id']" position="after">
                    <!-- Add your fields or attributes here -->
                    <div name="options" attrs="{'invisible': ['|','|','|',('picking_type_code','in',('incoming','outgoing')),('backorder_id','!=',False), ('raw_material_production_id', '!=', False), ('production_id', '!=', False)]}">
                        <field name="check_final_location" class="oe_inline"/>
                        <label for="check_final_location"/>

                    </div>
                    <div name="options" attrs="{'invisible':['|','|','|','|',('check_final_location','=',False), ('picking_type_code','in',('incoming','outgoing')),('backorder_id','!=',False), ('raw_material_production_id', '!=', False), ('production_id', '!=', False)]}">
                        <field name="has_transit_location" class="oe_inline"/>
                        <label for="has_transit_location"/>
                    </div>
                </xpath>
                <xpath expr="//field[@name='location_dest_id']" position="after">
                    <!-- Add your fields or attributes here -->

                    <field name="final_location_dest_id" groups="stock.group_stock_multi_locations"
                           attrs="{'invisible': [('check_final_location','=',False)], 'required': [('check_final_location','=',True)]}"/>
                </xpath>
                <xpath expr="//group//field[@name='partner_id']" position="attributes">
                    <attribute name="attrs">{'invisible': [('final_location_dest_id','!=',False)]}</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>