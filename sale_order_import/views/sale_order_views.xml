<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sale_order_import_view_form" model="ir.ui.view">
            <field name="name">sale.order.import.view.form</field>
            <field name="model">sale_order.import</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Import Product From CSV File To Sale Order Lines">
                    <group>
                        <field name="data_file" nolabel="1" filename="file_name" />
                        <button name="import_file" string="Import" type="object" />
                        <field name="file_name" invisible="1" />
                    </group>
                    <footer>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="sale_order_import_action" model="ir.actions.act_window">
            <field name="name">Import Products</field>
            <field name="res_model">sale_order.import</field>
            <field name="target">new</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
        </record>

        <record id="sale_order_import_inherit_view" model="ir.ui.view">
            <field name="name">sale.order.import.inherit.view</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_done']" position="after">
                    <button name="%(sale_order_import_action)d"
                            string="Import Products"
                            type="action"
                            class="btn-primary"
                            states="draft,sent"/>
                </xpath>

            </field>
        </record>
    </data>
</odoo>