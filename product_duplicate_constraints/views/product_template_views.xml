<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Inherit Form View to Modify it -->
        <record id="product_template_assembly_reference_view_form" model="ir.ui.view">
            <field name="name">product.template.assembly.reference.view.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="textile_assembly.product_template_inherited_view_form"/>
            <field name="arch" type="xml">

                <xpath expr="//page[@name='textile_assembly_information']/group/group/field[@name='template_code']" position="replace">
                    <!-- Jika Tidak Ditambah Pada XML api constrains tidak ke trigger -->
                    <label for="template_code"/>
                    <div class="o_row">
                        <field name="template_code" placeholder="Referensi Code Produk Assembly"/>
                        <button name="action_generate_internal_reference" type="object" string="Generate Internal Reference"
                                class="oe_link"/>
                        <field name="assembly_code_ref" invisible="1"/>
                    </div>
                </xpath>

            </field>
        </record>

        <record id="product_template_assembly_reference_search_view" model="ir.ui.view">
            <field name="name">product.template.assembly.reference.search.view</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_search_view"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='name']" position="attributes">
                    <!-- Add new fields here -->
                    <attribute name="filter_domain">['|','|','|',('default_code','ilike',self),('name','ilike',self),('barcode','ilike',self),('assembly_code_ref','ilike',self)]</attribute>
                </xpath>
            </field>
        </record>

    </data>
</odoo>