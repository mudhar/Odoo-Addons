    <template id="report_stock_location_report">
        <t t-call="web.html_container">
            <t t-call="web.internal_layout">
                <div class="page">
                    <center>
                        <h2><span style="color:#a24689 !important;">Kartu Stock LoKasi</span></h2>
                        <div>
                            <span style="font-size: 18px;">Company</span> : <t t-if="data['company']"> <span style="font-size: 16px;" t-esc="data['company'][1]"/></t>
                        </div>
                    </center>
                    <br></br>
                    <table border="1" style="width:99%;">
                        <tr></tr>
                        <tr>
                            <t t-if="data['from_date']"><td><span style="color:#a24689 !important; font-size: 16px;">From Date: </span> <span t-esc="data['from_date']"/></td></t>
                            <t t-if="data['to_date']"><td><span style="color:#a24689 !important; font-size: 16px;">To Date: </span> <span t-esc="data['to_date']"/></td></t>
                            <t t-if="report_date"><td><span style="color:#a24689 !important; font-size: 16px;">Report Date: </span> <span t-esc="report_date"/></td></t>
                        </tr>
                        <tr>
                            <td colspan="3"> </td>
                        </tr>
                    </table>

                    <br></br><br></br>

                    <t t-if="location_lines">
                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <th class="col-sm-2" style="color:#a24689 !important;">Location</th>
                                    <th class="col-sm-2 text-right" style="color:#a24689 !important;">QTY Awal</th>
                                    <th class="col-sm-2 text-right" style="color:#a24689 !important;">QTY Sale</th>
                                    <th class="col-sm-2 text-right" style="color:#a24689 !important;">Return QTY Sale</th>
                                    <th class="col-sm-2 text-right" style="color:#a24689 !important;">QTY Purchase</th>
                                    <th class="col-sm-2 text-right" style="color:#a24689 !important;">Return QTY Purchase</th>
                                    <th class="col-sm-2 text-right" style="color:#a24689 !important;">Adjust(+)</th>
                                    <th class="col-sm-2 text-right" style="color:#a24689 !important;">Adjust(-)</th>
                                    <th class="col-sm-2 text-right" style="color:#a24689 !important;">QTY Akhir</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="location_lines" t-as="line">
                                    <td><span t-esc="line['location_name']"/> </td>
                                    <td class="text-right"><span t-esc="line['qty_awal']"/></td>
                                    <td class="text-right"><span t-esc="line['qty_sale']"/></td>
                                    <td class="text-right"><span t-esc="line['qty_return_sale']"/></td>
                                    <td class="text-right"><span t-esc="line['qty_purchase']"/></td>
                                    <td class="text-right"><span t-esc="line['qty_return_purchase']"/></td>
                                    <td class="text-right"><span t-esc="line['qty_adjust_plus']"/></td>
                                    <td class="text-right"><span t-esc="line['qty_adjust_minus']"/></td>
                                    <td class="text-right"><span t-esc="line['qty_akhir']"/></td>
                                </tr>
                            </tbody>
                        </table>
                    </t>

                    <t t-if="not location_lines">
                        <span style="font-size: 20px;">No Data to Display...!!!</span>
                    </t>

                </div>
            </t>
        </t>

    </template>
</odoo>
