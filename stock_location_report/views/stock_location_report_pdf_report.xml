<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_stock_location_report">
        <t t-call="web.html_container">
            <t t-call="web.internal_layout">
                <div class="page">
                    <center>
                        <h2><span style="color:#a24689 !important;">Kartu Stock LoKasi</span></h2>
                        <div>
                            <span style="font-size: 18px;">Company</span> : <t t-if="data['company']"> <span style="font-size: 16px;" t-esc="data['company'][1]"/></t>
                        </div>
                    </center>
                    <br></br>
                    <table border="1" style="width:99%;">
                        <tr></tr>
                        <tr>
                            <t t-if="data['from_date']"><td><span style="color:#a24689 !important; font-size: 16px;">From Date: </span> <span t-esc="data['from_date']"/></td></t>
                            <t t-if="data['to_date']"><td><span style="color:#a24689 !important; font-size: 16px;">To Date: </span> <span t-esc="data['to_date']"/></td></t>
                            <t t-if="report_date"><td><span style="color:#a24689 !important; font-size: 16px;">Report Date: </span> <span t-esc="report_date"/></td></t>
                        </tr>
                        <tr>
                            <td colspan="3"> </td>
                        </tr>
                    </table>

                    <br></br><br></br>

                    <t t-if="location_lines">
                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <th rowspan="2" class="text-center" style="color:#a24689 !important;">Location</th>
                                    <th rowspan="2" class="text-center" style="color:#a24689 !important;">Saldo Awal</th>
                                    <th rowspan="2" class="text-center" style="color:#a24689 !important;">Purchase</th>
                                    <th rowspan="2" class="text-center" style="color:#a24689 !important;">Adjust(+)</th>
                                    <th colspan="2" class="text-center" style="color:#a24689 !important;">Transfer In</th>
                                    <th rowspan="2" class="text-center" style="color:#a24689 !important;">GIT In</th>
                                    <th rowspan="2" class="text-center" style="color:#a24689 !important;">Sale</th>
                                    <th rowspan="2" class="text-center" style="color:#a24689 !important;">Retur Sale</th>
                                    <th rowspan="2" class="text-center" style="color:#a24689 !important;">GIT Out</th>
                                    <th colspan="2" class="text-center" style="color:#a24689 !important;">Transfer Out</th>
                                    <th rowspan="2" class="text-center" style="color:#a24689 !important;">Adjust(-)</th>
                                    <th rowspan="2" class="text-center" style="color:#a24689 !important;">Retur Purchase</th>
                                    <th rowspan="2" class="text-center" style="color:#a24689 !important;">Saldo Akhir</th>
                                </tr>
                                <tr>
                                    <th class="text-center" style="color:#a24689 !important;">SJ</th>
                                    <th class="text-center" style="color:#a24689 !important;">SMB</th>
                                    <th class="text-center" style="color:#a24689 !important;">Retur SJ</th>
                                    <th class="text-center" style="color:#a24689 !important;">Retur SMB</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="location_lines" t-as="line">
                                    <td><span t-esc="line['location_name']"/></td>
                                    <td><span t-esc="line['qty_awal']"/></td>
                                    <td><span t-esc="line['qty_purchase']"/></td>
                                    <td><span t-esc="line['qty_adjust_plus']"/></td>
                                    <td><span t-esc="line['qty_sj']"/></td>
                                    <td><span t-esc="line['qty_smb']"/></td>
                                    <td><span t-esc="line['qty_transit_in']"/></td>
                                    <td><span t-esc="line['qty_sale']"/></td>
                                    <td><span t-esc="line['qty_return_sale']"/></td>
                                    <td><span t-esc="line['qty_transit_out']"/></td>
                                    <td><span t-esc="line['qty_srb']"/></td>
                                    <td><span t-esc="line['qty_return_smb']"/></td>
                                    <td><span t-esc="line['qty_adjust_minus']"/></td>
                                    <td><span t-esc="line['qty_return_purchase']"/></td>
                                    <td><span t-esc="line['qty_akhir']"/></td>
                                </tr>
                            </tbody>
                        </table>
                    </t>


                    <t t-if="not location_lines">
                        <span style="font-size: 20px;">No Data to Display...!!!</span>
                    </t>

                </div>
            </t>
        </t>

    </template>
</odoo>
