<openerp>
    <data>
        <record id="sale_order_confirm_wizard_view_form" model="ir.ui.view">
            <field name="name">sale.order.confirm.wizard.view.form</field>
            <field name="model">sale_order_confirm.wizard</field>
            <field name="arch" type="xml">
                <form string="Confirm All Sale Order Draft">
                    <p class="oe_grey">
                       Confirm Semua SO Draft Yg Belum Kebentuk MO nya
                    </p>
                    <footer>
                        <button string="Confirm" name="action_confirm_sale_order" type="object" default_focus="1" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <act_window id="action_confirm_saleorder_draft"
                    multi="True"
                    key2="client_action_multi" name="Confirm All Sale Order Draft"
                    res_model="sale_order_confirm.wizard" src_model="sale.order"
                    view_mode="form" target="new" view_type="form"
                    groups="base.group_no_one"
        />

    </data>
</openerp>