<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="view_company_form_inherit_assembly" model="ir.ui.view">
            <field name="name">view.company.form.inherit.assembly</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page string="Assembly">
                        <group>
                            <field name="service_categ_id"/>
                            <field name="location_reject_id" domain="[('usage','=','internal')]"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>