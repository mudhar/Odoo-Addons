<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.textile_assembly</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="5"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" data-string="textile_assembly" string="Textile Assembly" data-key="textile_assembly" groups="base.group_no_one">
                        <h2>Assembly</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-xs-12 col-md-6 o_setting_box" id="assembly_picking">
                                <div class="o_setting_right_pane">
                                    <label string='Default Assembly Operation Type'/>
                                    <div class="text-muted">
                                        Default Template Assembly Operation Type
                                    </div>
                                    <div class="content-group">
                                        <div class="row mt16">
                                            <label string="Operation Consume" for="default_operation_type_consume_id" class="col-md-3 o_light_label"/>
                                            <field name="default_operation_type_consume_id" domain="[('code', '=', 'internal')]"/>
                                        </div>
                                        <div class="row mt16">
                                            <label string="Operation Produce" for="default_operation_type_produce_id" class="col-md-3 o_light_label"/>
                                            <field name="default_operation_type_produce_id" domain="[('code', '=', 'internal')]"/>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-xs-12 col-md-6 o_setting_box">
                                <div class="o_setting_right_pane">
                                    <label for="service_categ_id"/>
                                    <div class="text-muted">
                                        Set Kategori Product Service
                                    </div>
                                    <div class="content-group">
                                        <div class="mt16">
                                            <field name="service_categ_id"/>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-xs-12 col-md-6 o_setting_box">
                                <div class="o_setting_right_pane">
                                    <label for="location_id"/>
                                    <div class="text-muted">
                                        Set Location Stock
                                    </div>
                                    <div class="content-group">
                                        <div class="mt16">
                                            <field name="location_id"/>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-xs-12 col-md-6 o_setting_box" title="Ability to select a package type in sales orders and to force a quantity that is a multiple of the number of units per package.">
                                <div class="o_setting_left_pane">
                                    <field name="module_mrp_daily_report"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="module_mrp_daily_report"/>
                                    <div class="text-muted">
                                        Report Daily Production
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>