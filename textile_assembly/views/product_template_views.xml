<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="product_template_inherited_view_form" model="ir.ui.view">
            <field name="name">product.template.inherited.view.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='general_information']/group/group/field[@name='product_variant_id']" position="after">
                    <!-- Add your fields or attributes here -->
                    <field name="has_goods" invisible="1"/>
                </xpath>
                <xpath expr="//page[@name='general_information']" position="after">
                    <!-- Add your fields or attributes here -->
                    <page string="Assembly" name="textile_assembly_information" attrs="{'invisible': [('has_goods','=',False)]}">
                        <group>
                            <group>

                                <field name="template_code" placeholder="Referensi Code Produk Assembly"
                                       attrs="{'invisible': [('has_goods','=',False)], 'required': [('has_goods','=',True)]}"/>
                                <field name="pattern_code" placeholder="Referensi Code Pola"
                                       attrs="{'invisible': [('has_goods','=',False)], 'required': [('has_goods','=',True)]}"/>
                            </group>
                        </group>
                    </page>
                </xpath>

                <xpath expr="//div[@name='options']//div" position="after">
                    <!-- Add your fields or attributes here -->
                    <div>
                        <field name="is_roll"/>
                        <label for="is_roll"/>
                    </div>

                </xpath>
            </field>
        </record>
    </data>
</odoo>