<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
         <!--mrp.workcenter-->
        <!-- Inherit Form View to Modify it -->
        <record id="mrp_workcenter_view_inherit_cutting" model="ir.ui.view">
            <field name="name">mrp.workcenter.view.inherit.cutting</field>
            <field name="model">mrp.workcenter</field>
            <field name="inherit_id" ref="mrp.mrp_workcenter_view"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='name']" position="after">
                    <!-- Add your fields or attributes here -->
                    <div name="options" groups="base.group_user">
                        <div>
                            <field name="is_cutting"/>
                            <label for="is_cutting"/>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

        <!-- Inherit Form View to Modify it -->
        <record id="mrp_routing_workcenter_form_inherit_sequence" model="ir.ui.view">
            <field name="name">Replace Sequence</field>
            <field name="model">mrp.routing.workcenter</field>
            <field name="inherit_id" ref="mrp.mrp_routing_workcenter_form_view"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='sequence']" position="replace">
                    <!-- Add your fields or attributes here -->
                    <field name="sequence"/>
                </xpath>

            </field>
        </record>
    </data>
</odoo>