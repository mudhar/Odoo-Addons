<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="plan_change_vendor_wizard_view_form" model="ir.ui.view">
            <field name="name">plan.change.vendor.wizard.view.form</field>
            <field name="model">assembly_plan.change_vendor.wizard</field>
            <field name="arch" type="xml">
                <form string="Change CMT Vendor">
                    <group>
                        <field name="partner_id"/>
                        <field name="plan_id"/>
                        <field name="assembly_id"/>
                    </group>
                    <footer>
                        <button name="action_confirm" string="Submit"
                                colspan="1" type="object" class="btn-success"/>
                        <button string="Cancel" class="btn-default" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <!--Action-->
        <record id="action_plan_change_vendor_wizard" model="ir.actions.act_window">
            <field name="name">Change Vendor CMT</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">assembly_plan.change_vendor.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="plan_change_vendor_wizard_view_form"/>
            <field name="target">new</field>
        </record>
    </data>
</odoo>