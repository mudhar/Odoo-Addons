<odoo>
    <data>
        <record id="change_vendor_wizard_view_form" model="ir.ui.view">
            <field name="name">change.vendor.wizard.view.form</field>
            <field name="model">change.vendor.wizard</field>
            <field name="arch" type="xml">
                <form string="Change Vendor">
                    <sheet>
                        <group>
                            <field name="partner_id" domain="[('supplier','=',True), ('is_cmt','=',True)]"/>
                            <field name="work_order_id" invisible="1"/>
                        </group>
                        <footer>
                            <button name="action_confirm" type="object" string="Confirm" class="btn-success" colspan="1"/>
                             <button string="Cancel" class="btn-default" special="cancel" />
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <!--Action-->
        <record id="action_change_vendor_wizard" model="ir.actions.act_window">
            <field name="name">Change Vendor CMT</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">change.vendor.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="change_vendor_wizard_view_form"/>
            <field name="target">new</field>
        </record>
    </data>
</odoo>
