<odoo>
    <data>
        <record id="product_service_wizard_view_form" model="ir.ui.view">
            <field name="name">product.service.wizard.view.form</field>
            <field name="model">mrp_workorder.product_service.wizard</field>
            <field name="arch" type="xml">
                <form string="Add New Product Service">
                    <field name="work_order_id" invisible="1"/>
                    <field name="production_id" invisible="1"/>
                    <group>
                        <field name="product_service_id"
                               options="{'no_create': True}"
                               domain="[('id', 'in', context.get('product_ids', []))]"/>
                        <label for="product_qty"/>
                        <div class="o_row">
                            <field name="product_qty"/>
                            <field name="product_uom_id" readonly="1"/>
                        </div>
                        <field name="price_unit" attrs="{'required': True}"/>
                    </group>

                    <footer>
                        <button name="button_confirm" type="object" string="Confirm"
                                class="btn-primary" colspan="1"/>
                        <button string="Cancel" class="btn-default" special="cancel" />
                    </footer>

                </form>
            </field>
        </record>
    </data>
</odoo>