<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!--  Change Product Quantity -->
        <record id="view_change_inputan_qty_wizard" model="ir.ui.view">
            <field name="name">Update Quantity Good dan Quantity Reject</field>
            <field name="model">change.inputan.qty</field>
            <field name="arch" type="xml">
                <form string="Change Product Qty">
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Reference" nolabel="1"/>
                        </h1>
                    </div>
                    <field name="next_work_order_id" invisible="1"/>
                    <group>
                        <field name="product_id" invisible="1"/>
                        <field name="product_qty" readonly="1"/>
                        <field name="product_uom_id"/>
                        <field name="quantity_good"/>
                        <field name="quantity_reject"/>
                        <field name="qc_id" invisible="1"/>
                        <field name="quantity_sample" attrs="{'invisible': [('next_work_order_id','!=',False)]}"/>
                    </group>
                    <group>
                        <field name="date_start"/>
                        <field name="user_id"/>
                    </group>
                    <group string="Progress Record">
                        <field name="log_ids" nolabel="1">
                            <tree string="Progress Record">
                                <field name="date_start"/>
                                <field name="user_id"/>
                                <field name="product_id"/>
                                <field name="quantity_good" sum="Total Qty Good"/>
                                <field name="quantity_reject" sum="Total Qty Reject"/>
                                <field name="user_id"/>
                                <field name="state_log_line"/>
                            </tree>
                        </field>
                    </group>
                    <field name="is_work_order_finishing" invisible="1"/>
                    <footer>
                        <button name="action_confirm" string="Tambah Input"
                                colspan="1" type="object" class="btn-success"/>
                        <button name="action_adjustment" string="Kurang Input"
                                colspan="1" type="object" class="btn-warning"
                                attrs="{'invisible': [('is_work_order_finishing','=',False)]}"/>
                        <button string="Cancel" class="btn-default" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_change_inputan_qty" model="ir.actions.act_window">
            <field name="name">Update Quantity Good dan Quantity Reject</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">change.inputan.qty</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</odoo>
