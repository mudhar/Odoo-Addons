<odoo>
    <data>
        <record id="purchase_message_created_wizard_view_form" model="ir.ui.view">
            <field name="name">purchase.message.created.wizard.view.form</field>
            <field name="model">purchase_created_message.wizard</field>
            <field name="arch" type="xml">
                <form string="Warning">
                    <field name="work_order_id" invisible="1"/>
                    <div class="oe_title">
                        <h4>
                            Anda Belum Membuat Tagihan Untuk Jasa Pada Process ini
                            Apakah Anda Ingin Membuat Tagihan Terlebih Dahulu?
                        </h4>
                    </div>
                    <group>
                        <div name="options">
                            <label for="choice"/>
                            <field name="choice" widget="radio"/>
                        </div>
                    </group>
                    <footer>
                        <button name="action_confirm" type="object" string="Confirm"
                                class="btn-primary" colspan="1"/>
                        <button string="Cancel" class="btn-default" special="cancel" />
                    </footer>

                </form>
            </field>
        </record>
    </data>
</odoo>