<odoo>
    <data>
        <record id="product_service_remove_wizard_view_form" model="ir.ui.view">
            <field name="name">product.service.wizard.view.form</field>
            <field name="model">mrp_workorder.product_service_remove.wizard</field>
            <field name="arch" type="xml">
                <form string="Remove Product Service">
                    <field name="work_order_id" invisible="1"/>
                    <field name="production_id" invisible="1"/>
                    <group>
                        <field name="product_service_id"
                               options="{'no_create': True}"
                               domain="[('id', 'in', context.get('product_ids', []))]"/>
                    </group>

                    <footer>
                        <button name="button_confirm" type="object" string="Confirm"
                                class="btn-primary" colspan="1"/>
                        <button string="Cancel" class="btn-default" special="cancel" />
                    </footer>

                </form>
            </field>
        </record>
    </data>
</odoo>