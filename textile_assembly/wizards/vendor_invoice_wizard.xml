<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="purchase_order_form_inherit_workorder" model="ir.ui.view">
            <field name="name">purchase.order.form.inherit.workorder</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <!-- Add your fields or attributes here -->
                    <field name="work_order_id" invisible="1"/>
                </xpath>
            </field>
        </record>
        <record id="view_purchase_order_filter_inherit_workorder" model="ir.ui.view">
            <field name="name">view.purchase.order.filter.inherit.work.order</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.view_purchase_order_filter"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='name']" position="after">
                    <!-- Add your fields or attributes here -->
                    <field name="work_order_id" string="Work Order"/>
                </xpath>
                <xpath expr="//group" position="inside">
                    <!-- Add your fields or attributes here -->
                    <filter string="Work Order" domain="[]" context="{'group_by': 'work_order_id'}"/>
                </xpath>
            </field>
        </record>

        <record id="vendor_invoice_wizard_view_form" model="ir.ui.view">
            <field name="name">vendor.invoice.wizard.view.form</field>
            <field name="model">vendor.invoice.wizard</field>
            <field name="arch" type="xml">
                <form string="Create Purchase Order">
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="product_id" options="{'no_create': True}" domain="[('id', 'in', context.get('product_ids', []))]"/>
                            <label for="product_qty"/>
                            <div class="o_row">
                                <field name="product_qty"/>
                                <field name="product_uom_id" readonly="1"/>
                            </div>
                        </group>
                        <group>
                            <field name="price_unit"/>
                            <field name="purchase_date"/>
                            <field name="work_order_id" invisible="1"/>
                        </group>

                    </group>
                    <footer>
                        <button name="action_confirm" type="object" string="Confirm"
                                class="btn-primary" colspan="1"/>
                        <button string="Cancel" class="btn-default" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
        <record id="action_vendor_invoice_wizard" model="ir.actions.act_window">
            <field name="name">Create Invoice</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vendor.invoice.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="vendor_invoice_wizard_view_form"/>
            <field name="target">new</field>
        </record>
    </data>
</odoo>
