<odoo>
    <data>
        <record id="production_journal_wip_wizard_view_form" model="ir.ui.view">
            <field name="name">production_journal.wip_wizard.view.form</field>
            <field name="model">production_journal.wip_wizard</field>
            <field name="arch" type="xml">
                <form string="Adjust WIP Material Differ">
                    <field name="production_id" invisible="1"/>
                    <group>
                        <group>
                            <field name="account_expense_material_id"/>
                            <field name="amount_wip_differ" attrs="{'readonly': [('production_id','!=',False)]}"/>
                        </group>
                        <group>
                            <field name="amount_total"/>
                        </group>

                    </group>
                    <footer>
                        <button name="action_confirm" type="object" string="Confirm"
                                class="btn-primary" colspan="1"/>
                        <button string="Cancel" class="btn-default" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_production_journal_wip" model="ir.actions.act_window">
            <field name="name">Adjust WIP Material</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">production_journal.wip_wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>