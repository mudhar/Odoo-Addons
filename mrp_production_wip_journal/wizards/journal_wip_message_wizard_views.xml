<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="journal_wip_message_wizard_view_form" model="ir.ui.view">
            <field name="name">journal.wip.message.wizard.view.form</field>
            <field name="model">journal_wip.message_wizard</field>
            <field name="arch" type="xml">
                <form string="Warning">
                    <field name="production_id" invisible="1"/>
                    <div class="oe_title">
                        <h4>
                            Anda Tidak Dapat Melakukan Adjust WIP
                            Karena Anda Belum Selesai Melakukan Return Untuk Material Yang Lebih
                            Apakah Anda Ingin Melakukan Return Terlebih Dahulu?
                        </h4>
                    </div>
                    <group>
                        <div class="options">
                            <label for="choice"/>
                            <field name="choice" widget="radio"/>
                            <p colspan="2" class="oe_edit_only" attrs="{'invisible': [('choice','=','yes')]}">
                                <ul>
                                    <li>
                                        Jika Anda Memilih No, Anda Akan Diarahkan Ke Form Penyesuain WIP Material
                                    </li>
                                </ul>
                            </p>
                            <p colspan="2" class="oe_edit_only" attrs="{'invisible': [('choice','=','no')]}">
                                <ul>
                                    <li>
                                        Jika Anda Memilih Yes. Tahap Yang Harus Anda Lakukan
                                    </li>
                                    <li>
                                        Minta Bagian Gudang Untuk Mengembalikan Produk Bahan Baku Ke Gudang Bahan Baku
                                    </li>
                                    <li>
                                        Anda Dapat Akses Dari Halaman Manufacturing Order Ini
                                    </li>
                                    <li>
                                        Klik Ikon Truck Yang Berlabel Kan Consume Lalu Pilih Produk Yang Akan Dikembalikan Ke Gudang
                                    </li>
                                </ul>
                            </p>
                        </div>
                    </group>

                    <footer>
                        <button name="action_confirm" type="object" string="Confirm"
                                class="btn-primary" colspan="1"/>
                        <button string="Cancel" class="btn-default" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_journal_wip_message_wizard" model="ir.actions.act_window">
            <field name="name">Message WIP</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">journal_wip.message_wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</odoo>