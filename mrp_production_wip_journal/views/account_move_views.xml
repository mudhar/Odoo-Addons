<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_mrp_production_filter_inherit_account_wip_differ" model="ir.ui.view">
            <field name="name">view.mrp.production.filter.inherit.account.wip.differ</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.view_mrp_production_filter"/>
            <field name="arch" type="xml">

                <xpath expr="//filter[@name='todo']" position="after">
                    <!-- Add new fields here -->
                    <filter string="To Do WIP" name="todo_adjust_wip" domain="[('is_wip_differ','=',True)]" help="Manufacturing Orders which are in wip state."/>
                </xpath>

            </field>
        </record>
        <record id="mrp_production_wip_journal_view_tree" model="ir.ui.view">
            <field name="name">mrp.production.wip.journal.view.tree</field>
            <field name="model">mrp.production</field>
            <field name="priority">17</field>
            <field name="arch" type="xml">
                <tree string="MO To Adjust WIP" create="false">
                    <field name="is_wip_differ" invisible="1"/>
                    <field name="name"/>
                    <field name="product_qty"/>
                    <field name="amount_wip_assembly"/>
                    <field name="amount_wip_differ_context"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!-- This Menu Item Must have a parent -->
        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="menu_account_manufacturing_root"
                  name="Operation"
                  parent="account.menu_finance"
                  sequence="1"/>

        <record id="action_production_journal_wip_form" model="ir.actions.act_window">
            <field name="name">MO WIP</field>
            <field name="res_model">mrp.production</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="mrp_production_wip_journal_view_tree"/>
            <field name="domain">[('state', 'not in', ('done','cancel'))]</field>
            <field name="context">{'search_default_todo_adjust_wip': True}</field>
        </record>

        <menuitem id="menu_account_manufacturing"
                  name="Manufacturing Order"
                  parent="menu_account_manufacturing_root"
                  action="action_production_journal_wip_form"
        />

    </data>
</odoo>
