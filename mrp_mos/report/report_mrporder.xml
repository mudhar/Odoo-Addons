<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="report_mrporder_inherit" inherit_id="mrp.report_mrporder">
            <xpath expr="//table[@class='table table-condensed']/tr/td[5]" position="after">
                <!-- Add your fields or attributes here -->
                <td class="text-center"><strong>Detail Information</strong></td>
            </xpath>
             <xpath expr="//table[@class='table table-condensed']//tr[@t-foreach='o.workcenter_lines']/td[5]" position="after">
                <!-- Add your fields or attributes here -->
                  <td class="text-center"><span t-field="line2.note_desc"/></td>
            </xpath>

            <xpath expr="//h3[@t-if='o.move_lines']" position="replace">
                <!-- Add your fields or attributes here -->
                <h3 t-if="o.ppic_lines">Bill Of Material</h3>
            </xpath>

            Replace Table move_lines
            <xpath expr="//table[@t-if='o.move_lines or o.move_lines2']" position="replace">
                <!-- Add your fields or attributes here -->
                <table class="table table-condensed" t-if="o.ppic_lines">
                    <thead>
                        <tr>
                            <th><strong>Product</strong></th>
                            <th class="text-right">
                                <strong>Quantity</strong>
                            </th>
                             <th class="text-center">
                                <strong>Note</strong>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-if="o.ppic_lines">
                            <tr>
                                <td colspan="4"><strong>Products to Consume</strong></td>
                            </tr>
                            <tr t-foreach="o.ppic_lines" t-as="line">
                                <td>
                                    <span t-field="line.sequence"/>
                                    <span t-field="line.product_id.code"/>
                                    <span t-field="line.product_id.name"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="line.assign_qty"/>
                                    <span t-field="line.product_uom.name" groups="product.group_uom"/>
                                </td>
                                <td class="text-center">
                                    <span t-field="line.note_bom"/>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </xpath>

        </template>
    </data>
</openerp>