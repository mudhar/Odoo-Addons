<odoo>
    <record id="picking_barcode_action_form" model="ir.ui.view">
        <field name="name">picking.barcode.action.form</field>
        <field name="model">picking.barcode.action</field>
        <field name="arch" type="xml">
            <form string="Find">
                <div
                        class="alert alert-success text-center o_form_header"
                        role="alert"
                        style="margin-bottom:0px;"
                        attrs="{'invisible':[('state', '=', 'warning')]}"
                >
                    <bold>
                        <field name="status" />
                    </bold>
                </div>
                <div
                        class="alert alert-danger alert-dismissable text-center"
                        role="alert"
                        style="margin-bottom:0px;"
                        attrs="{'invisible':[('state', '=', 'waiting')]}"
                >
                    <bold>
                        <field name="status" />
                    </bold>
                </div>
                <field name="state" invisible="1" />
                <field name="domain" invisible="1" />
                <field name="model" invisible="1" />
                <field name="method" invisible="1" />
                <field name="_barcode_scanned" widget="action_barcode_handler" />
                <footer>
                    <button
                            name="action_cancel"
                            string="Close"
                            class="oe_link"
                            special="cancel"
                    />
                    <button name="button_test_find" type="object" string="Test Find Picking"/>
                </footer>
            </form>
        </field>
    </record>
    <act_window
            id="stock_picking_find_action"
            name="Barcode Launcher"
            res_model="picking.barcode.action"
            view_mode="form"
            context="{'default_model': 'stock.picking', 'default_method': 'find_picking_by_barcode'}"
            target="new"
    />
    <menuitem
            id="menu_orders_pickings"
            name="Find Pickings"
            action="stock_picking_find_action"
            parent="stock.menu_stock_root"
        />
</odoo>
